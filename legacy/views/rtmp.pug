html
  head
    title #{name} - Stream
  body(style='margin:0;')
    object(width='100%', height='100%', type='application/x-shockwave-flash')
      param(name='movie', value='/GrindPlayer.swf')
      param(name='allowfullscreen', value='true')
      if auth 
        param(name='flashvars', value='flashvars="&src=rtmp://'+domain+':'+port+'/'+name+'/'+auth)
      else
        param(name='flashvars', value='flashvars="&src=rtmp://'+domain+':'+port+'/'+name)
